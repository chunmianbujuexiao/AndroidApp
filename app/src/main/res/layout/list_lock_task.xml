<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:paddingLeft="16dp"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/id_listview_lock_task_title"
        android:layout_width="wrap_content"
        android:textSize="25dp"
        android:layout_height="wrap_content" />
    <!--<TextView-->
    <!--android:layout_width="wrap_content"-->
    <!--android:textSize="5dp"-->
    <!--android:text="\n"-->
    <!--android:layout_height="wrap_content" />-->
    <TextView
        android:id="@+id/id_listview_lock_task_content"
        android:textSize="12dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_width="match_parent"
        android:textSize="3dp"
        android:text="\n"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/id_listview_lock_task_icon_clock"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <ImageView
            android:id="@+id/id_listview_lock_task_icon_lock_screen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:textSize="5dp"
        android:text="\n"
        android:layout_height="wrap_content" />

</LinearLayout>